<p id="notice"><%= notice %></p>

<h1>Imóveis a Venda</h1>

<% prop_cols = %i(type usable_size_m2 toilet_count bedroom_count floor) %>

<table>
  <thead>
    <tr>
      <th>Bairro</th>
      <th>Preço</th>
      <% prop_cols.each do |c| %>
        <th><%= Property.human_attribute_name(c) %></th>
      <% end %>
      <th>Mobiliado?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.property.address.neighborhood %></td>
        <td><%= listing.price_cents %></td>
        <% prop_cols.each do |c| %>
          <td><%= listing.property.public_send(c) %></td>
        <% end %>
        <td><%= listing.furnished %></td>
        <td><%= link_to 'Show', listing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

